{
    "manifest_version": 3,
    "name": "React Chrome Extension",
    "version": "1.0.0",
    "description": "A Chrome extension built with React, Vite, and Tailwind CSS",
    "permissions": [
        "identity",
        "storage",
        "activeTab",
        "sidePanel",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*",
        "https://*.amazoncognito.com/*"
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "options_page": "src/options/index.html",
    "action": {
        "default_title": "Open Side Panel"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "callback.html",
                "callback.js",
                "signout.html",
                "signout.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}