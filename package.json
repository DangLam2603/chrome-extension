{
    "name": "chrome-extension-react-vite",
    "version": "1.0.0",
    "description": "Chrome Extension built with React, Vite, and Tailwind CSS",
    "scripts": {
        "dev": "vite",
        "build": "npm run build:main && npm run build:content && npm run copy-manifest",
        "build:main": "vite build",
        "build:content": "vite build --config vite.content.config.ts",
        "copy-manifest": "copy public\\manifest.json dist\\manifest.json",
        "preview": "vite preview",
        "clean": "rmdir /s /q dist"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/chrome": "^0.1.27",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.3.6",
        "vite": "^5.0.8"
    }
}