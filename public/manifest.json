{
    "manifest_version": 3,
    "name": "React Chrome Extension",
    "version": "1.0.0",
    "description": "A Chrome extension built with React, Vite, and Tailwind CSS",
    "permissions": [
        "storage",
        "activeTab",
        "sidePanel"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "options_page": "src/options/index.html",
    "action": {
        "default_title": "Open Side Panel"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}